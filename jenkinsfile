pipeline{
    agent any
    tools{
        maven 'maven'
    }
    stages{
        stage('Checkout'){
            steps{
            git url:'https://github.com/nitish-002/jk-pra.git', branch:'main'
            echo "Checkout complete"
            }
        }
        stage('Build'){
            steps{
            sh 'mvn clean package'
            }
        }
        stage('Test'){
            steps{
            sh 'mvn test'
            }
        }
        stage('Run Jar'){
        steps{
            script{
                def output= sh(script:'java -jar /var/lib/jenkins/workspace/CICD newpractice/target/simple-java-project-1.0-SNAPSHOT.jar')
                echo "Output ${optput}"
            }
        }
        }
    }
}
